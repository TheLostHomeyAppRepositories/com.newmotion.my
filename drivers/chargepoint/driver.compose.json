{
  "id": "chargepoint",
  "name": {
    "en": "Charge point",
    "nl": "Laadpunt"
  },
  "images": {
    "large": "/drivers/chargepoint/assets/images/large.png",
    "small": "/drivers/chargepoint/assets/images/small.png"
  },
  "class": "evcharger",
  "capabilities": [
  ],
  "repair": [
    {
      "id": "login"
    }],
  "pair": [
    {
      "id": "login"
    },
    {
      "id": "discover_chargepoints",
      "template": "loading",
      "navigation": {
        "next": "list_devices"
      }
    },
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "device_settings"
      },
      "options": {
        "singular": true
      }
    },
    {
      "id": "device_settings"
    },
    {
      "id": "error"
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "settings": [
    {
      "type": "group",
      "label": {
        "en": "Car settings",
        "nl": "Auto instellingen"
      },
      "children": [
        {
          "id": "charge_capacity",
          "type": "number",
          "label": {
            "en": "Charge capacity (kW)",
            "nl": "Laad vermogen (kW)"
          },
          "value": 3.3,
          "min": 0
        }
      ]
    },
    {
      "id": "include_power",
      "type": "checkbox",
      "label": {
        "en": "Include Charge capacity in Energy",
        "nl": "Laad vermogen in Energie weergeven"
      },
      "value": true
    }
  ]
}